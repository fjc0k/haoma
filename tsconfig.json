{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "newLine": "LF",
    "skipLibCheck": true,
    "sourceMap": false,
    "preserveSymlinks": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "./lib/index.d.ts"],
    "outDir": "./lib",
    "lib": ["esnext", "dom"]
  }
}
