{
  "name": "haoma",
  "version": "2.4.4",
  "description": "使用 EditorConfig + ESLint + Prettier，助你写出漂亮的前端代码。",
  "keywords": [
    "editorconfig",
    "eslint",
    "prettier"
  ],
  "homepage": "https://github.com/fjc0k/haoma",
  "bugs": {
    "url": "https://github.com/fjc0k/haoma/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:fjc0k/haoma.git"
  },
  "license": "MIT",
  "author": {
    "name": "Jay Fong",
    "email": "fjc0kb@gmail.com",
    "url": "https://github.com/fjc0k"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": "lib/cli.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rimraf lib && tsc -p tsconfig.build.json",
    "dev": "rimraf lib && tsc -p tsconfig.build.json -w",
    "postinstall": "node lib/generateTypes.js",
    "prepublishOnly": "npm run build",
    "pupu": "git push --follow-tags origin master && npm publish",
    "release": "standard-version -a && npm run pupu",
    "releaseBeta": "standard-version -a --release-as patch --prerelease beta && npm run pupu -- --tag next",
    "releaseMajor": "standard-version -a --release-as major && npm run pupu",
    "releaseMajorBeta": "standard-version -a --release-as major --prerelease beta && npm run pupu -- --tag next",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,less,scss,sass,html,htm,vue,yml,yaml,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.10.0",
    "@babel/plugin-transform-modules-commonjs": "^7.10.1",
    "@jest/types": "^26.0.1",
    "@swc-node/jest": "^0.3.7",
    "@testing-library/jest-dom": "^5.8.0",
    "@types/eslint": "^7.2.0",
    "@types/jest": "^25.2.3",
    "@types/node": "^12.12.34",
    "@types/prettier": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "cross-spawn": "^7.0.2",
    "deepmerge": "^4.2.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "eslint-plugin-vue": "^6.2.2",
    "jest-chain": "^1.1.5",
    "jest-extended": "^0.11.5",
    "jest-serializer-html": "^7.0.0",
    "jest-snapshot-serializer-function-name": "^1.1.0",
    "json5": "^2.1.3",
    "pkg-dir": "^4.2.0",
    "prettier-plugin-packagejson": "^2.2.5",
    "prettier-plugin-sh": "^0.4.0",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "snapshot-diff": "^0.7.0",
    "ts-jest": "^26.1.0",
    "vtils": "^3.2.0",
    "vue-eslint-parser": "^7.1.0",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@testing-library/react": "^10.0.4",
    "@types/cross-spawn": "^6.0.1",
    "@types/json5": "^0.0.30",
    "@types/lodash-es": "^4.17.3",
    "@types/react": "^16.9.32",
    "@types/rimraf": "^3.0.0",
    "@types/yargs": "^15.0.4",
    "eslint": "^7.2.0",
    "husky": "^4.2.3",
    "jest": "^26.0.1",
    "lint-staged": "^10.1.2",
    "lodash-es": "^4.17.15",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "standard-version": "^7.1.0",
    "type-fest": "^0.13.0",
    "typescript": "^4.0.2",
    "vue": "^2.6.11"
  },
  "peerDependencies": {
    "eslint": "^7",
    "jest": "^26",
    "prettier": "^2",
    "typescript": "^3"
  }
}
