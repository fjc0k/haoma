{
  "name": "haoma",
  "version": "2.25.1",
  "description": "使用 EditorConfig + ESLint + Prettier，助你写出漂亮的前端代码。",
  "keywords": [
    "editorconfig",
    "eslint",
    "prettier"
  ],
  "homepage": "https://github.com/fjc0k/haoma",
  "bugs": {
    "url": "https://github.com/fjc0k/haoma/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:fjc0k/haoma.git"
  },
  "license": "MIT",
  "author": {
    "name": "Jay Fong",
    "email": "fjc0kb@gmail.com",
    "url": "https://github.com/fjc0k"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": "lib/cli.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rimraf lib && tsc -p tsconfig.build.json",
    "dev": "npm run build -- -w",
    "postinstall": "node lib/generateTypes.js",
    "prepublishOnly": "npm run build",
    "pupu": "git push --follow-tags origin master && npm publish",
    "release": "standard-version -a && npm run pupu",
    "releaseBeta": "standard-version -a --release-as patch --prerelease beta && npm run pupu -- --tag next",
    "releaseMajor": "standard-version -a --release-as major && npm run pupu",
    "releaseMajorBeta": "standard-version -a --release-as major --prerelease beta && npm run pupu -- --tag next",
    "test": "jest",
    "test:compile": "node ./lib/cli.js compile"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,less,scss,sass,html,htm,vue,yml,yaml,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.12.13",
    "@babel/eslint-parser": "^7.12.13",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-proposal-decorators": "^7.12.13",
    "@babel/plugin-transform-react-jsx": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@babel/register": "^7.12.13",
    "@jest/types": "^26.6.2",
    "@microsoft/api-extractor": "^7.13.0",
    "@swc-node/jest": "^1.1.0",
    "@swc-node/register": "^1.0.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@types/eslint": "^7.2.6",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/prettier": "^2.1.6",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "@vue/babel-helper-vue-jsx-merge-props": "^1.2.1",
    "@vue/babel-plugin-jsx": "^1.0.2",
    "@vue/babel-preset-jsx": "^1.2.4",
    "autoprefixer": "^10.2.4",
    "babel-jest": "^26.6.3",
    "babel-plugin-import": "^1.13.3",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "chalk": "^4.1.0",
    "common-dir": "^3.0.0",
    "core-js": "^3.9.0",
    "cross-spawn": "^7.0.3",
    "cuid": "^2.1.8",
    "deepmerge": "^4.2.2",
    "delete-empty": "^3.0.0",
    "dotenv": "^8.2.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "eslint-plugin-vue": "^7.5.0",
    "execa": "^5.0.0",
    "fs-extra": "^9.1.0",
    "globby": "^11.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest-chain": "^1.1.5",
    "jest-extended": "^0.11.5",
    "jest-serializer-html": "^7.0.0",
    "jest-snapshot-serializer-function-name": "^1.1.0",
    "json5": "^2.2.0",
    "less": "^4.1.1",
    "ora": "^5.3.0",
    "pkg-dir": "^5.0.0",
    "postcss": "^8.2.4",
    "postcss-modules": "^4.0.0",
    "prettier-plugin-packagejson": "^2.2.9",
    "prettier-plugin-sh": "^0.6.0",
    "react-test-renderer": "^17.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.32.6",
    "snapshot-diff": "^0.8.1",
    "ts-jest": "^26.5.0",
    "tslib": "^2.1.0",
    "vtils": "^4.30.2",
    "vue-eslint-parser": "^7.4.1",
    "workerpool": "^6.1.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.5",
    "@types/cross-spawn": "^6.0.2",
    "@types/cuid": "^1.3.1",
    "@types/delete-empty": "^3.0.0",
    "@types/fs-extra": "^9.0.6",
    "@types/less": "^3.0.2",
    "@types/lodash-es": "^4.17.4",
    "@types/react": "^17.0.1",
    "@types/rimraf": "^3.0.0",
    "@types/sass": "^1.16.0",
    "@types/workerpool": "^6.0.0",
    "@types/yargs": "^16.0.0",
    "eslint": "^7.19.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "lodash-es": "^4.17.20",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "standard-version": "^9.1.0",
    "type-fest": "^0.20.2",
    "typescript": "^4.1.3",
    "vue": "^2.6.12"
  },
  "peerDependencies": {
    "eslint": "^7",
    "jest": "^26",
    "prettier": "^2",
    "typescript": "^3 || ^4"
  }
}
