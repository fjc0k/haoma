{
  "name": "haoma",
  "version": "1.10.0",
  "description": "使用 EditorConfig + ESLint + Prettier，助你写出漂亮的前端代码。",
  "keywords": [
    "editorconfig",
    "eslint",
    "prettier"
  ],
  "homepage": "https://github.com/fjc0k/haoma",
  "bugs": {
    "url": "https://github.com/fjc0k/haoma/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:fjc0k/haoma.git"
  },
  "license": "MIT",
  "author": {
    "name": "Jay Fong",
    "email": "fjc0kb@gmail.com",
    "url": "https://github.com/fjc0k"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": "lib/cli.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rimraf lib && tsc -p tsconfig.build.json",
    "dev": "rimraf lib && tsc -p tsconfig.build.json -w",
    "prepublishOnly": "npm run build",
    "release": "standard-version -a && git push --follow-tags origin master && npm publish",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,less,scss,sass,html,htm,vue,yml,yaml,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@jest/types": "^25.4.0",
    "@rushstack/eslint-config": "^0.5.6",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.3",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/eslint": "^6.1.9",
    "@types/jest": "^25.2.1",
    "@types/prettier": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-eslint": "^10.1.0",
    "cross-spawn": "^7.0.2",
    "deepmerge": "^4.2.2",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "jest-snapshot-serializer-function-name": "^1.1.0",
    "prettier-plugin-packagejson": "^2.1.2",
    "prettier-plugin-sh": "^0.3.2",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "snapshot-diff": "^0.7.0",
    "ts-jest": "^25.4.0",
    "vtils": "^2.57.0",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.1",
    "@types/node": "^12.12.34",
    "@types/react": "^16.9.32",
    "@types/rimraf": "^3.0.0",
    "@types/yargs": "^15.0.4",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jest": "^25.4.0",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "standard-version": "^7.1.0",
    "type-fest": "^0.13.0",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "eslint": "^6",
    "jest": "^25",
    "prettier": "^2",
    "typescript": "^3"
  }
}
